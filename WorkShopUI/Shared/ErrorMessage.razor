@if (Display)
{
    <div class="top-separator">
        <div class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            @Message
        </div>                
    </div>
}

@code {
    [Parameter]
    public string Message { get; set; }

    [Parameter]
    public bool Display { get; set; }
}
